---
import BaseLayout from '../layouts/BaseLayout.astro';

const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));
---
<BaseLayout title="ÂçöÂÆ¢ - Êú®È£é">
  <style>
    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .page-title {
      text-align: center;
      font-size: 2.5rem;
      color: #2d3748;
      margin-bottom: 50px;
      font-weight: 300;
      letter-spacing: 2px;
    }

    .posts-list {
      list-style: none;
      display: grid;
      gap: 20px;
    }

    .post-item {
      background: rgba(255, 255, 255, 0.9);
      border-radius: 16px;
      padding: 24px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
      transition: all 0.3s ease;
      border: 1px solid rgba(255, 255, 255, 0.5);
    }

    .post-item:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 25px rgba(236, 72, 153, 0.25);
    }

    .post-item a {
      text-decoration: none;
      color: #2d3748;
      font-size: 1.1rem;
      font-weight: 400;
      display: block;
      transition: color 0.3s ease;
    }

    .post-item a:hover {
      color: #ec4899;
    }

    .post-item::before {
      content: "üìù";
      margin-right: 12px;
      font-size: 1.2rem;
    }

    @media (max-width: 768px) {
      .page-title {
        font-size: 2rem;
      }

      .container {
        padding: 0 15px;
      }
    }
  </style>

  <div class="container">
    <h1 class="page-title">ÊàëÁöÑÂçöÂÆ¢</h1>
    <ul class="posts-list">
      {allPosts.map((post: any) => (
        <li class="post-item">
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))}
    </ul>
  </div>
</BaseLayout>